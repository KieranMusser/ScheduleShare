{
  "manifest_version": 3,
  "name": "Schedule Share",
  "version": "1.0",
  "description": "Shares Schedules",
  "content_scripts": [
    {
      "matches": ["*://schedulebuilder.umn.edu/*"],
      "js": ["schedule-share.js"]
    }
  ],
  "permissions": [
    "storage", "webRequest", "scripting"
  ],
  "host_permissions": [
    "*://*/*", "http://*/*", "http://*/"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; object-src 'self'; connect-src 'self' *"
  },
  "action": {
    "default_title": "Schedule Share",
    "default_popup": "popup/popup.html"
  }
}

